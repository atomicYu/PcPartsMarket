<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <title>PcPartsMarket</title>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        @await Component.InvokeAsync("CategoryMenu")
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                    <form class="navbar-form navbar-left" asp-controller="PcComponent" asp-action="Search" method="get">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Find the Component" name="searchString" value="@ViewData["searchString"]">
                        </div>
                    </form>
                    <ul class="nav navbar-nav navbar-right" style="margin-right:10px">                    
                        <li> @await Component.InvokeAsync("ShoppingCartSummary")</li>
                        <li>@await Html.PartialAsync("LoginPartial")</li>                   
                    </ul>
                </div>
        </div>
    </nav>
    <div class="container body-content" style="padding:0px 25px 0px 25px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - PcPartsMarket by Zika</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>
