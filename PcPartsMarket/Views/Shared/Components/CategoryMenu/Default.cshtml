<li class="dropdown">

    <a asp-controller="PcComponent"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Components<b class="caret"></b></a>

    <ul class="dropdown-menu">

        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="PcComponent" asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="PcComponent" asp-action="List" asp-route-category="">View all Components</a>
        </li>
    </ul>
</li>


